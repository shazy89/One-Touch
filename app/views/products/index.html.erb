<h2>Products</h2>

<table>
  <thead>
   <tr>
      <th>Title</th>
      <th>Total</th>
       <th colspan="3"></th>
   </tr>
   </thead>
   <tbody>
   <% @product.each do |product| %>
   <tr>
      <td><%= product.title %></td>
      <td>$<%= product.price %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   </tr>
   <% end %>
   </tbody>
</table>




<%= link_to 'New Product', new_product_path %>